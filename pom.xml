		<dependency>
			<groupId>com.sun</groupId>
			<artifactId>jimi</artifactId>
			<version>1.0</version>
			<scope>system</scope>  
			<systemPath>${project.basedir}/src/main/webapp/WEB-INF/lib/jimi.jar</systemPath>
		</dependency>
		
		<!-- https://mvnrepository.com/artifact/com.sun/jimi -->
