			<groupId>io.nats</groupId>
			<artifactId>jnats</artifactId>
			<version>0.4.1</version>
		</dependency>

	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<configuration>  
		        <includeSystemScope>true</includeSystemScope>  
		     	</configuration>  
			</plugin>

			<!--<plugin>
				<groupId>org.springframework.boot</groupId>
